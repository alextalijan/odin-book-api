generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEVELOPMENT_DATABASE_URL")
}

model User {
  id               String          @id @default(uuid())
  username         String          @unique
  hash             String
  hasAvatar        Boolean         @default(false)
  following        Following[]     @relation("following")
  followers        Following[]     @relation("followed")
  sentRequests     FollowRequest[] @relation("sentRequest")
  incomingRequests FollowRequest[] @relation("incomingRequest")
  posts            Post[]          @relation("ownPosts")
  likes            Like[]
  comments         Comment[]
}

model Following {
  id         String @id @default(uuid())
  follower   User   @relation("following", fields: [followerId], references: [id])
  followed   User   @relation("followed", fields: [followedId], references: [id])
  followerId String
  followedId String
}

enum RequestStatus {
  pending
  accepted
  rejected
  canceled
}

model FollowRequest {
  id         String        @id @default(uuid())
  sender     User          @relation("sentRequest", fields: [senderId], references: [id])
  senderId   String
  receiver   User          @relation("incomingRequest", fields: [receiverId], references: [id])
  receiverId String
  status     RequestStatus @default(pending)
  sentAt     DateTime      @default(now())
}

model Post {
  id       String    @id @default(uuid())
  text     String
  author   User      @relation("ownPosts", fields: [authorId], references: [id])
  authorId String
  likes    Like[]
  comments Comment[]
  postedAt DateTime  @default(now())
}

model Like {
  id      String   @id @default(uuid())
  likedAt DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  post    Post     @relation(fields: [postId], references: [id])
  postId  String
}

model Comment {
  id          String   @id @default(uuid())
  text        String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  post        Post     @relation(fields: [postId], references: [id])
  postId      String
  commentedAt DateTime @default(now())
}
